<!DOCTYPE html>
<html>
<head>
	<style>
	

 font {
 	font-size: 17.9px;
 	font-family: "Times New Roman", Georgia, Serif;
 }
 article{
 	margin-top: -5%;
  background-color: #cccccc;
 }
	</style>
  <title>Cripto câmbio</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
  <%= stylesheet_link_tag 'http://yandex.st/bootstrap/3.1.1/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'http://yandex.st/bootstrap/3.1.1/js/bootstrap.min.js' %>
  
  <%= csrf_meta_tags %>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->
		<script src="js/jquery.min.js"></script>
		<script src="js/jquery.dropotron.min.js"></script>
		<script src="js/jquery.scrolly.min.js"></script>
		<script src="js/jquery.scrollgress.min.js"></script>
		<script src="js/skel.min.js"></script>
		<script src="js/skel-layers.min.js"></script>
		<script src="js/init.js"></script>
		<noscript>
			<link rel="stylesheet" href="css/skel.css" />
			<link rel="stylesheet" href="css/style.css" />
			<link rel="stylesheet" href="css/style-wide.css" />
			<link rel="stylesheet" href="css/style-noscript.css" />
		</noscript>
		
		<!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->
		<!--[if lte IE 9]><link rel="stylesheet" href="css/ie/v9.css" /><![endif]-->
	</head>
	<body class="contact">
	
		<!-- Header -->
			<header id="header">
				<font size='4' >
					<button href="/">Criptocambio</button>
					<% if session[:user_id] != nil %>
						  <% if session[:user_id] == current_user.id ;%>
						  <span>Seja bem vindo <b><%= label_tag username, nil, placeholder: username, disabled: true%></b><% if current_order %> 
<!-- <p style="padding:4px;">
  <!-- Você tem <%= pluralize current_order.total_items, 'item'%> em seu carrinho, com volume: 
  <%= number_to_currency current_order.total_before_tax %>. <a href= "/basket"><img src="/images/icon_cart.png" height="25" width="25"></a>
 </p> -->
<% end %></span>
						  <% end %>
						  <% else %>
						  <strong><a href="login">Visitante?</a></strong>
						  <% end %>
				</font>
				<nav id="nav">
					<ul>
						<% if session[:user_id] != nil %>
						<% if session[:user_id] == current_user.id ;%>
						<% if is_admin? == true %><li class='current'><%= link_to "Painel admin", :controller => 'admin', :action =>'home', :id => session[:user_id]%></li><% end%>
						<li class="current"><%= link_to "Inicio", :controller => 'sessions', :action =>'home', :id => session[:user_id]%></li>
						<li class= 'current'><a href='store'>Loja</a></li>
						<li class='current'><a href='contato'>Contato</a></li>
						<li class='current'><a href='howto'>Como comprar</a></li>
						<% end %>
						<% else %>
						<li class="current"><a href="/">Inicio</a></li>
						<li class="current"><a href="register">Registrar</a></li>
						<li class='current'><a href='howto'>Como comprar</a></li>
						<% end%>
							
						<li>
						  <% if session[:user_id] != nil %>
						  <% if session[:user_id] == current_user.id ;%>
						  <a href="logout" class="button special">Logout</a>
						  <% end %>
						  <% else %>
						  <a href="login" class = "button special">Login</a>
						  <% end %>
						  
						</li>
					</ul>
				</nav>
			</header>
<%= yield %>

</body>
</html>
