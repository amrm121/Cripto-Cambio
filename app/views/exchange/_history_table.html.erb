<style>
    .padding {
        padding-left: 5px;
    }
    .smallpx{
        font-size: 11.5px;
        font-weight: bold;
    }
</style>

<table type="openorders" style:"text-align: center;">
   <tr>
        <td class="borderbottom" style:"text-align: center;">Data/Horda</td>
        <td class="borderbottom" style:"text-align: center;">Tipo</td>
        <td class="borderbottom" style:"text-align: center;">Quantidade</td>
        <td class="borderbottom" style:"text-align: center;">Preço unitário</td>
    </tr>
    <% if @consulta3.any?%>
    <% array = @par.split("/") %>
    <% @consulta3.each do |j| %>
    <tr class="open">
        <td class="borderbottom padding smallpx" style:"text-align: center;"><%= j.updated_at.strftime("%d/%m/%y %H:%M:%S") %></td>
        <% if j.tipo == "buy"%>
        <td class="borderbottom smallpx" style:"text-align: center;">Compra</td>
        <% else %>
        <td class="borderbottom smallpx" style:"text-align: center;">Venda</td>
        <% end %>
        <td class="borderbottom smallpx" style:"text-align: center;"><%= j.amount %> <%= array[0] %></td>
        <td class="borderbottom smallpx" style:"text-align: center;"><%= j.price %> <%= array[1] %></td>
    </tr>
    <% end %>
    <% end %>
</table>