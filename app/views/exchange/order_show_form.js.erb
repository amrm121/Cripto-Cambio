<% if @tipo == "compra" %>
$( "#order_form" ).html( "<%= escape_javascript( render( :partial => "exchange/buy_form") ) %>" );
$('#open_orders_table').html('<img src="images/loading.gif" height="64" width="64" />');
$('#order_book').html('<img src="images/loading.gif" height="64" width="64" />');
<% elsif @tipo == "venda" %>
$( "#order_form" ).html( "<%= escape_javascript( render( :partial => "exchange/sell_form") ) %>" );
$('#order_book').html('<img src="images/loading.gif" height="64" width="64" />');
$('#open_orders_table').html('<img src="images/loading.gif" height="64" width="64" />');
<% end %>